    int x = (int) Math.random() * fichasRestantes.length;
    
    public Dealer(){

    }
    
    public boolean tomarDecision(Ficha fichaSiguiente, Ficha[] fichasRestantes, boolean turno){
        boolean reparte = false;
        this.siguiente = siguiente;
        this.turno = turno;
        this.fichasRestantes = fichasRestantes;
        while(fichasRestantes.length > 0 && turno){
            
        }
          return reparte;                                              //PREGUNTAR!!!
    }
  
   public int getPuntosGanador(Ficha[] fRestantesJ1, Ficha[] fRestantesJ2){
        int puntosJ1 = ficha.getValor(fRestantesJ1);
        int puntosJ2 = ficha.getValor(fRestantesJ2);
        int puntosGanador = 0;
        if(puntosJ1 > puntosJ2){
            puntosGanador = puntosJ1 += puntosJ2;
        }
        else if(puntosJ2 > puntosJ1){
            puntosGanador = puntosJ2 += puntosJ1;
        }
            return puntosGanador;
        }
   
   public void quienGano(int puntajeJ1, int puntajeJ2){
     if(puntajeJ1>=100){
     interfaz.mensajeDealer("Gana el jugador 1");
    }
    if(puntajeJ2>=100){
     interfaz.mensajeDealer("Gana el jugador 2");
    }
    }
}
