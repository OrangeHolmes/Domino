public class Jugador{
//Clase de un Jugador.
    public String nombre;
    public Ficha [] fichasJugador;
    public int puntos;

 public Jugador(){
 } //Constructor por omisi√≥n.

 public Jugador(String tipoJugador, int puntos, Ficha [] fichas){ //Constructor con parametros.
  this.nombre = tipoJugador; 
  this.puntos = puntos;
  this.fichasJugador = new Ficha [fichas.length];
  
   for(int i=0; i < fichas.length; ++i) {
    this.fichasJugador [i] = fichas [i];
   }

  } 
}
