import java.util.Random;
public class Bateador {
// Este jugador usa una tecnica poco eficiente ya que no sabe jugar entonces solo me coloca una ficha siempre y cuando pueda ponerse.  
  private Jugador bateador;
  private Ficha[] misFichas;
  private Ficha miFicha;
  private Mesa miTablero;
 
  public Bateador(Jugador nuevo){
    bateador= nuevo; 
    }

  public void noSeJugar( Ficha[] fichasJ, int ultimoI, int ultimoD){
  // El metodo escoge una ficha al azar de su pila propia de fichas, y si es valida la pone.
   Random aleatorio = new Random();
   this.misFichas = fichasJ;
   boolean puedoSeguir= false;
   int ladoI=0;
   int ladoD=0;
   String posicion = null;
   boolean fichaValida = false;
   while(puedoSeguir == false){
    while(fichaValida == false){
     int n = aleatorio.nextInt(7)+1;
     this.miFicha = miFicha.escogerFicha(fichasJ,n);
     fichaValida= miFicha.esValida(miFicha);}
    ladoI= miFicha.getLadoIzquierdo();
    ladoD= miFicha.getLadoDerecho();
    posicion = miFicha.comoColoco(ladoI, ladoD, ultimoI, ultimoD);
    if( posicion != null){
     puedoSeguir = true;}
    }
    this.miTablero.colocarFicha(posicion, ladoI, ladoD);
 }
}
