   public void ordenar2(){
   int valor1 = 0;
   int valor2 = 0;
   int aux =0;
   for(int i=0; i <fichasTotales.length-1; ++i){
     for(int j = 0; j < fichasTotales.length-i-1;++j){
      valor1+=fichasTotales[j].getLadoIzquierdo();
      valor1+= fichasTotales[j].getLadoDerecho();
      valor2+=fichasTotales[j+1].getLadoIzquierdo();
      valor2+= fichasTotales[j+1].getLadoDerecho();
      if(valor2 > valor1){
      Ficha tmp = fichasTotales[j];
      fichasTotales[j] = fichasTotales[j+1];
      fichasTotales[j+1] = tmp;} 
     }
      }
    ficha.mostrarFichas(fichasTotales);
  }
    
    }
